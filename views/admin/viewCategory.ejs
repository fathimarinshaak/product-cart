<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <style>
    body {
      background: #f5e6d3;
      font-family: 'Press Start 2P', cursive;
    }
    .navbar {
      background: #3e2723;
    }
    .navbar-brand, .nav-link {
      color: #f5e6d3 !important;
      transition: color 0.3s;
    }
    .nav-link:hover {
      color: #d4a373 !important;
    }
    .content {
      padding: 2rem;
    }
    .table {
      background: #d4a373;
      border-radius: 10px;
      overflow: hidden;
    }
    .btn-delete {
      background: #3e2723;
      color: #f5e6d3;
      font-size: 10px;
      border-radius: 8px;
    }
    .btn-delete:hover {
      background: #8d6e63;
    }
    .btn-add {
      background: #3e2723;
      color: #f5e6d3;
      border-radius: 8px;
    }
    .btn-add:hover {
      background: #8d6e63;
    }
  </style>
</head>
<body>

  
  <%- include('navbar') %>

  <!-- Categories Content -->
  <div class="content container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Categories</h2>
      <button class="btn btn-add" data-bs-toggle="modal" data-bs-target="#addCategoryModal">+ Add Category</button>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Category Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach((i,index)=>{ %>
          <tr>
            <td><%=index+1%></td>
            <td><%=i.name%></td>
            <td><a href="/admin/category/delete/<%=i.id%>"><button class="btn btn-delete btn-sm">Delete</button></a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Add Category Modal -->
  <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" style="background:#d4a373; font-family:'Press Start 2P', cursive;">
        <div class="modal-header">
          <h5 class="modal-title">Add Category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form method="post" action="/admin/category">
          <div class="modal-body">
            <input type="text" class="form-control" name="name" placeholder="Category Name" required>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-add">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
